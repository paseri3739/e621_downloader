{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Current File via ts-node",
            "console": "integratedTerminal",
            "runtimeArgs": [
                "-r",
                "ts-node/register"
            ],
            "args": [
                "${file}"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        }
    ]
}
