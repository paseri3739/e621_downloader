        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "DOM",
            "DOM.Iterable"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2015",
        "sourceMap": true,
        "esModuleInterop": true,
    },
    "include": [
        "/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
