{
    "compilerOptions": {
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "lib": [
            "DOM",
            "DOM.Iterable"
        ],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES6",
        "sourceMap": true,
        "esModuleInterop": true,
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
